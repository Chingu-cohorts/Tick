<div class="container">
  <h1>Chingu Tickets</h1>
  <p>Here's a list of all the tickets you've submitted.</p>
  <%= link_to "New Ticket", new_ticket_path, class: "btn btn-primary" %>
  
  <div class="row">
    <% @tickets.each do |ticket| %>
      <div class="card ticket-box">
        <div class="card-body">
          <p class="card-text"><%= ticket.description %></p>
          <p class="mb-2 text-muted"><%= ticket.created_at.strftime("%b %d %Y, %H:%M") %></p>
          <% if ticket.is_processed? %>
            <strong class="mb-2">Processed</strong>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
